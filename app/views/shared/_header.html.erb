<header class="navbar bg-secondary text-secondary-content shadow-sm px-2 md:px-4 py-2 sticky top-0 z-50 font-bold tracking-tight">
  <!-- ハンバーガーメニュー -->
  <div class="navbar-start">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /> </svg>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-200 text-base-content rounded-box z-1 mt-3 w-52 p-2 shadow">
        <li><%= link_to "home", root_path %></li>
        <li><%= link_to "top", root_path %></li>
      </ul>
    </div>
  </div>
  <!-- ロゴ表示 -->
  <div class="navbar-center">
    <%= link_to root_path, class: "btn btn-ghost btn-secondary p-0" do %>
      <%# inline_svg_tag "ginlog_logo.svg", class: "h-14 w-auto" %>
      <p class="text-2xl md:text-3xl">PosiRem!</p>
    <% end %>
  </div>
  <!-- ログイン・ログアウト -->
  <div class="navbar-end">
    <%# unless user_signed_in? %>
    <% if true %>
      <!-- ログインボタン表示 -->
      <%= link_to "#", class: "btn btn-ghost btn-secondary btn-md md:btn-lg flex items-center gap-1" do %>
        <span><%= t('header.login') %></span>
        <span class="material-symbols-rounded ms-size-24 md:ms-size-32">login</span>
      <% end %>
    <% else %>
      <!-- ログアウトボタン表示 -->
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-ghost btn-secondary btn-md md:btn-lg flex items-center gap-1" do %>
        <span><%= t('header.logout') %></span>
        <span class="material-symbols-rounded ms-size-24 md:ms-size-32">logout</span>
      <% end %>
    <% end %>
  </div>
</header>
